<div id=edit>
  <div class="contents row">
    <%= form_tag("/comments/#{@comment.id}", method: :patch ) do %>
      <h3>Editing Post</h3>
      <textarea cols="30" name="text" placeholder="text" rows="10"><%= @comment.text %></textarea>
      <input type="submit" value="Update Post">
    <% end %>
  </div>
</div>