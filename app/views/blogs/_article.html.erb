<div class=comment>
  <p class=text><%= comment.text %></p>
  <% if user_signed_in? && current_user.id == comment.user_id %>
    <ul class="more_list">
      <li class=list>
        <%= link_to 'EDIT', "/comments/#{comment.id}/edit", method: :get %>
      </li>
      <li class=list>
        <%= link_to 'DELETE', "/comments/#{comment.id}", method: :delete %>
      </li>
    </ul>
  <% end %>
</div>